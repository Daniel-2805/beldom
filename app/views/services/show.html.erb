<div class="container"> 
  <h1><%= @service.title %></h1>
  <h2><%= @service.description %> </h2>

  <%= link_to 'Editar servicio', edit_service_path(@service), class: "btn btn-primary" %>

  <%= link_to 'Eliminar servicio', service_path, method: :delete, data: { confirm: "estas seguro que quieres eliminar el servicio?" }, class: "btn btn-danger"  %>

  <%= simple_form_for [@service, @booking] do |f| %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.submit %>
  <% end %>

  <% @service.bookings.each do |booking| %>
    <% booking.reviews.each do |review| %>
      <div class="comment"> 
        <i class="fas fa-user-circle fa-2x"></i>
        <div class="comment-content">
          <p><small><%= review.created_at.strftime("Commented on %d/%m/%Y at %I:%M%p") %></small></p>
          <p><strong><%= review.content %></strong></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
