<div class="container-show">
  <div class="d-flex justify-content-center">
    <div class="row align-center">

      <div class="col-6">
        <h1 class="text-center" style="font-family: san-serif">Tu servicio esta reservado</h1> 
        <p style="font-family: san-serif"><strong>Hora de entrada:</strong> <%= @booking.start_date.strftime("Dia: %m/%d/%Y hora: %I:%M%p") %></p>
        <p style="font-family: san-serif"><strong>Hora de salida</strong> <%= @booking.end_date.strftime("Dia: %m/%d/%Y hora: %I:%M%p") %></p>
        <p style="font-family: san-serif"><strong>Direcci√≥n</strong> <%= @booking.address_client %></p> 
        
        
        <%= link_to 'Cancelar reserva', booking_path(@booking), method: :delete, data: { confirm: "Estas seguro que quieres cancelar la reserva?" }, class: "btn btn-danger" %>
      

      </div>
      
      <div class="col-6">
        <h1 class="text-center" style="font-family: san-serif">Dejanos tus comentarios</h1> 
        <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>	
  </div>
</div>