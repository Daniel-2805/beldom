<div class= "container ">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1><center>Reserva</center></h1>
    </div>
    <div class="col-md-6">
      <h1><center>Dejanos tus comentarios</center></h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class=" p-5 bg-white rounded mb-5 ">
       <p><strong>Hora de entrada:</strong> <%= @booking.start_date.strftime("Dia: %m/%d/%Y hora: %I:%M%p") %></p>
       <p><strong>Hora de salida :</strong> <%= @booking.end_date.strftime("Dia: %m/%d/%Y hora: %I:%M%p") %></p>
       <p><strong>Direcci√≥n :</strong> <%= @booking.address_client %></p>
       <%= link_to 'Cancelar reserva' , booking_path(@booking), method: :delete, data: { confirm: "Estas seguro que quieres cancelar la reserva?" }  %>
      </div>  
    </div>
    <div class="col-md-6">
      <div class=" p-5 bg-white rounded mb-5 "> 
        <%= simple_form_for [@booking, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <div class="form-actions">
            <%= f.button :submit, "Crear Comentario", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div> 
</div>
